---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="The ultimate collection of best-of lists and top rankings from every field imaginable." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			:root {
				--font-sans: 'Segoe UI', system-ui, -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, sans-serif;
				--color-text: #333;
				--color-bg: #f8f9fa;
				--color-primary: #007bff;
				--color-border: #dee2e6;
			}
			body {
				font-family: var(--font-sans);
				background-color: var(--color-bg);
				color: var(--color-text);
				margin: 0;
				padding: 0;
				line-height: 1.7;
			}
			.container {
				max-width: 800px;
				margin: 0 auto;
				padding: 2rem;
			}
			header {
				padding: 1rem 0;
				border-bottom: 1px solid var(--color-border);
				margin-bottom: 2rem;
				text-align: center;
			}
			header a {
				font-size: 2rem;
				font-weight: bold;
				color: var(--color-text);
				text-decoration: none;
			}
			h1, h2, h3 { font-weight: 700; }
			a { color: var(--color-primary); text-decoration: none; }
			a:hover { text-decoration: underline; }
			footer {
				text-align: center;
				margin-top: 4rem;
				padding: 2rem 0;
				border-top: 1px solid var(--color-border);
				font-size: 0.9rem;
				color: #6c757d;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<header>
				<a href="/">YourSiteName.com</a>
			</header>
			<main>
				<slot />
			</main>
			<footer>
				Â© {new Date().getFullYear()} YourSiteName.com | All Rights Reserved.
			</footer>
		</div>
	</body>
</html>